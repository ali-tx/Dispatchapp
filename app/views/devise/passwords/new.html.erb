<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style:'width: 400px; border: 2px solid #ccc; border-radius: 4px;  background-color: #f8f8f8;
      padding: 12px 20px'  %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
